<h1>All Project Participants</h1>

<table>
  <thead>
    <tr>
      <th><%= sortable "project" %></th>
      <th><%= sortable "user" %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @project_participants.each do |project_participant| %>
    <tr>
      <td><%= link_to project_participant.project.title, project_path(project_participant.project) %></td>
      <td><%= link_to project_participant.user.full_name, user_path(project_participant.user) %></td>
      <td><%= link_to 'Show', project_participant %></td>
      <td><%= link_to 'Edit', edit_project_participant_path(project_participant) %></td>
      <td><%= link_to 'Destroy', project_participant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br />

