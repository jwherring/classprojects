<div id="leftcolumn" class="span-7">
<%= render 'shared/menu' %>
</div>

<div id="maincontent" class="span-15 push-2">
<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h3>Comment</h3>
<p>
  <strong>User:</strong>
  <% if is_admin %>
    <%= link_to @evaluation.user.full_name, user_path(@evaluation.user) %>
  <% else %>
    <%= @evaluation.user.full_name %>
  <% end %>
</p>

<p>
  <strong>Project:</strong>
  <%= link_to @evaluation.project.title, project_path(@evaluation.project) %>
</p>

<p>
  <strong>Comment:</strong>
  <%= @evaluation.comment %>
</p>

<p>
  <strong>Rating:</strong>
  <%= @evaluation.rating %>
</p>


<%= render 'footerlinks' %>
